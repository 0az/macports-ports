Respect MacPort compiler flags.
--- Makefile.orig	2016-04-21 13:26:11.000000000 -0700
+++ Makefile	2019-01-16 08:31:24.000000000 -0700
@@ -21,6 +21,9 @@
 # Makefile for bowtie, bowtie2-build, bowtie2-inspect
 #
 
+include Makefile.macports.inc
+EXTRA_FLAGS += $(CXXFLAGS)
+
 prefix = /usr/local
 bindir = $(prefix)/bin
 
@@ -48,11 +51,6 @@
 MACOS = 0
 ifneq (,$(findstring Darwin,$(shell uname)))
 	MACOS = 1
-	ifneq (,$(findstring 13,$(shell uname -r)))
-		CPP = clang++
-		CC = clang
-		override EXTRA_FLAGS += -stdlib=libstdc++
-	endif
 endif
 
 POPCNT_CAPABILITY ?= 1
@@ -167,9 +165,9 @@
 
 SSE_FLAG=-msse2 
 
-DEBUG_FLAGS    = -O0 -g3 -m64 $(SSE_FLAG)
+DEBUG_FLAGS    = $(SSE_FLAG)
 DEBUG_DEFS     = -DCOMPILER_OPTIONS="\"$(DEBUG_FLAGS) $(EXTRA_FLAGS)\""
-RELEASE_FLAGS  = -O3 -m64 $(SSE_FLAG) -funroll-loops -g3
+RELEASE_FLAGS  = $(SSE_FLAG)
 RELEASE_DEFS   = -DCOMPILER_OPTIONS="\"$(RELEASE_FLAGS) $(EXTRA_FLAGS)\""
