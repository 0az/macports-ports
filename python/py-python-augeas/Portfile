if {${name} ne ${subport}} {
    depends_lib-append  \
                    port:augeas \
                    port:py${python.version}-cffi \
                    port:py${python.version}-pycparser \
                    port:py${python.version}-setuptools \
                    port:libffi \
                    port:libxml2

    patchfiles      patch-augeas-ffi.py.diff

    post-patch {
        reinplace "s|%PREFIX%|${prefix}|" ${worksrcpath}/augeas/ffi.py
    }
