variant universal {}

build.env           CC="${configure.cc}" \
                    CXX="${configure.cxx}" \
                    CFLAGS="[get_canonical_archflags cc]" \
                    CXXFLAGS="[get_canonical_archflags cxx]" \
                    PORTABLE=1 \
                    DEBUG_LEVEL=0 \
                    OPT="${configure.optflags}"

destroot.env-append CC="${configure.cc}" \
                    CXX="${configure.cxx}" \
                    CFLAGS="[get_canonical_archflags cc]" \
                    CXXFLAGS="[get_canonical_archflags cxx]" \
                    PORTABLE=1 \
                    DEBUG_LEVEL=0 \
                    OPT="${configure.optflags}" \
                    INSTALL_PATH=${destroot}${prefix}
